num1 = int(input("Enter a number:"))

num2 = int(input("Enter another number:"))
ans = input("Would you like to add another number?")

total = num1 + num2

while ans == "y":
 num1 = int(input("Enter another number:"))
 total = total + num2
 ans = input("Would you like to add another number?")

print(total)
